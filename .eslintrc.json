{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "sourceType": [
    "script",
    "module"
  ],
  "plugins": [
    "react",
    "babel"
  ],
  "rules": {
    //Possible Errors
    "no-console": [
      "off"
    ],
    "no-cond-assign": [
      "error"
    ],
    //Best Practices
    "array-callback-return": [
      "error"
    ],
    "block-scoped-var": [
      "error"
    ],
    "dot-location": [
      "error",
      "property"
    ],
    "eqeqeq": [
      "error"
    ],
    "guard-for-in": [
      "error"
    ],
    "no-alert": [
      "error"
    ],
    "no-loop-func": [
      "error"
    ],
    "no-multi-str": [
      "error"
    ],
    //Variables
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": false
      }
    ],
    //Node.js and CommonJS
    "handle-callback-err": [
      "error",
      "^(err|error)$"
    ],
    "no-path-concat": [
      "error"
    ],
    //Stylistic Issues
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "block-spacing": [
      "error",
      "always"
    ],
    "camelcase": [
      "off"
    ],
    "comma-spacing": [
      "error"
    ],
    "comma-dangle": [
      "error"
    ],
    "comma-style": [
      "error"
    ],
    "func-call-spacing": [
      "error"
    ],
    "keyword-spacing": [
      "error"
    ],
    "max-len": [
      "error",
      {
        "code": 80,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-mixed-spaces-and-tabs": [
      "error"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-unneeded-ternary": [
      "error"
    ],
    "no-whitespace-before-property": [
      "error"
    ],
    "object-curly-spacing": [
      "off"
    ],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "space-infix-ops": [
      "error",
      {
        "int32Hint": true
      }
    ],
    "space-unary-ops": [
      "error"
    ],
    //ECMAScript 6
    "arrow-spacing": [
      "error"
    ],
    "generator-star-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "no-duplicate-imports": [
      "error"
    ],
    "no-var": [
      "error"
    ],
    "object-shorthand": [
      "error"
    ],
    "prefer-const": [
      "error"
    ],
    "prefer-template": [
      "error"
    ],
    "rest-spread-spacing": [
      "error"
    ],
    "template-curly-spacing": [
      "error"
    ],
    "yield-star-spacing": [
      "error"
    ],
    // react
    "react/display-name": [
      "off"
    ],
    "react/prop-types": [
      "off"
    ],
    //babel
    "babel/object-curly-spacing": [
      "error",
      "never"
    ]
  }
}
